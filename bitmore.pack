#!/bin/bash

clear
echo BitterMore (apm systemload) is ready
# Set the initial prompt
PS1="apmsys@bittermore~{ "

# Main loop
while true; do
  # Read the user input
  read -r -p "$PS1" input

  # Exit if the user types "exit"
  if [[ "$input" == "exit" ]]; then
    echo "Exiting..."
    break
  fi

  # Run the command
  if [[ -n "$input" ]]; then
    # Handle special commands
    case "$input" in
      # Clear the screen
      "cls" | "clear")
        clear
        ;;
      # Display the current directory
      "pwd")
        pwd
        ;;
      # List directory contents
      "dir" | "ls")
        ls
        ;;
      # Change directory
      "cd"*)
        cd "${input#cd }"
        ;;
      "load"*)
        cd ~
        cd pack
        python3 apm.pack
        cd packages
        ls
        ;;
      # Run a command
      *)
        # Execute the command
        eval "$input"
        ;;
    esac
  fi
done
